<data_handling_setup>

  <!--Only need to modify here-->
  <dbadaptor id="1">
    <dbname>biosql_june_02</dbname>
    <driver>mysql</driver>
    <host>pulse</host>
    <user>root</user>
    <password></password>
    <module>Bio::DB::SQL::DBAdaptor</module>
  </dbadaptor>
  <dbadaptor id="2">
    <dbname>test_GFD</dbname>
    <driver>mysql</driver>
    <host>pulse</host>
    <user>root</user>
    <password></password>
    <module>Bio::GFD::SQL::DBAdaptor</module>
  </dbadaptor>

  <!--Modification Ends Here -->

  <!--fetch from Bioperl DB -->
  <iohandler id="1">
    <adaptor_id>1</adaptor_id>
    <adaptor_type>DB</adaptor_type>
    <iohandler_type>INPUT</iohandler_type>
    <method>
      <name>get_SeqAdaptor</name>
      <rank>1</rank>
    </method>
    <method>
      <name>fetch_by_dbID</name>
      <rank>2</rank>
      <argument>
        <value>INPUT</value>
        <type>SCALAR</type>
        <rank>1</rank>
      </argument>
      <argument>
        <!--caching the sequence-->
        <value>1</value>
        <type>SCALAR</type>
        <rank>2</rank>
      </argument>
    </method>
  </iohandler>

  <!--Store to GFD -->
  <iohandler id="2">
    <adaptor_id>2</adaptor_id>
    <adaptor_type>DB</adaptor_type>
    <iohandler_type>OUTPUT</iohandler_type>
    <method>
      <name>get_AggregatorAdaptor</name>
      <rank>1</rank>
    </method>
    <method>
      <name>store</name>
      <rank>2</rank>
      <argument>
        <tag>-driver</tag>
        <value>hit</value>
        <rank>1</rank>
        <type>SCALAR</type>
      </argument>
      <argument>
        <tag>-input</tag>
        <value>OUTPUT</value>
        <type>SCALAR</type>
        <rank>2</rank>
      </argument>
    </method>
  </iohandler>

  <!--fetch an array of hits from GFD-->
  <iohandler id="3">
    <adaptor_id>2</adaptor_id>
    <adaptor_type>DB</adaptor_type>
    <iohandler_type>INPUT</iohandler_type>
    <method>
      <name>get_AggregatorAdaptor</name>
      <rank>1</rank>
   </method>
   <method>
      <name>fetch</name>
      <rank>2</rank>
      <argument>
        <tag>-driver</tag>
        <value>hit</value>
        <rank>1</rank>
        <type>SCALAR</type>
      </argument>
      <argument>
        <tag>-method</tag>
        <value>fetch_all</value>
        <type>SCALAR</type>
        <rank>2</rank>
      </argument>
      <argument>
        <tag>-id</tag>
        <value>INPUT</value>
        <type>SCALAR</type>
        <rank>3</rank>
      </argument>
    </method>
  </iohandler>

  <!--store clusters to GFD-->
  <iohandler id="4">
    <adaptor_id>2</adaptor_id>
    <adaptor_type>DB</adaptor_type>
    <iohandler_type>OUTPUT</iohandler_type>
    <method>
      <name>get_AggregatorAdaptor</name>
      <rank>1</rank>
    </method>
    <method>
      <name>store</name>
      <rank>2</rank>
      <argument>
        <tag>-driver</tag>
        <value>hit</value>
        <rank>1</rank>
        <type>SCALAR</type>
      </argument>
      <argument>
        <tag>-id</tag>
        <value>OUTPUT</value>
        <rank>2</rank>
        <type>SCALAR</type>
      </argument>
    </method> 
  </iohandler>
</data_handling_setup>


